# VPS Production Environment Configuration
# Copy this file to .env.prod and fill in your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_DB=tg_watchdog
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_postgres_password_here
DATABASE_URL=postgresql+asyncpg://postgres:your_secure_postgres_password_here@postgres:5432/tg_watchdog

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO
PORT=8012

# =============================================================================
# TELEGRAM API CONFIGURATION
# =============================================================================
# Get these from https://my.telegram.org/apps
API_ID=your_api_id_here
API_HASH=your_api_hash_here
BOT_TOKEN=your_bot_token_here

# =============================================================================
# TELEGRAM ACCOUNTS CONFIGURATION
# =============================================================================
# Account 1 (Primary)
ACCOUNT1_PHONE=+1234567890
ACCOUNT1_PASSWORD=account1_password

# Account 2 (Optional)
ACCOUNT2_PHONE=+1234567891
ACCOUNT2_PASSWORD=account2_password

# Account 3 (Optional)
ACCOUNT3_PHONE=+1234567892
ACCOUNT3_PASSWORD=account3_password

# =============================================================================
# DOMAIN AND NETWORK CONFIGURATION
# =============================================================================
DOMAIN=7575.PRO
ALLOWED_HOSTS=7575.PRO,www.7575.PRO,localhost
CORS_ORIGINS=https://7575.PRO,https://www.7575.PRO

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
SECRET_KEY=your_very_long_and_secure_secret_key_here_at_least_50_characters
JWT_SECRET=your_jwt_secret_key_here
ENCRYPTION_KEY=your_32_character_encryption_key

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=20

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_TLS=true
FROM_EMAIL=noreply@7575.PRO

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_FORMAT=json
LOG_FILE=/app/data/logs/app.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_S3_ACCESS_KEY=your_s3_access_key
BACKUP_S3_SECRET_KEY=your_s3_secret_key

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
MONITORING_ENABLED=true
HEALTH_CHECK_INTERVAL=30
ALERT_EMAIL=admin@7575.PRO
UPTIME_ROBOT_API_KEY=your_uptimerobot_api_key

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
CACHE_TTL=3600  # 1 hour
CACHE_MAX_SIZE=1000
CACHE_ENABLED=true

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
MAX_FILE_SIZE=10MB
UPLOAD_PATH=/app/data/uploads
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,txt,doc,docx

# =============================================================================
# TIMEZONE CONFIGURATION
# =============================================================================
TIMEZONE=Asia/Shanghai
DATE_FORMAT=%Y-%m-%d %H:%M:%S

# =============================================================================
# DEVELOPMENT AND DEBUG (Production: keep these disabled)
# =============================================================================
DEBUG_SQL=false
DEBUG_REDIS=false
PROFILING_ENABLED=false
TEST_MODE=false

# =============================================================================
# SSL CONFIGURATION
# =============================================================================
SSL_ENABLED=true
SSL_CERT_PATH=/etc/letsencrypt/live/7575.PRO/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/7575.PRO/privkey.pem
SSL_VERIFY=true